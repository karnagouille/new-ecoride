{% extends 'base.html.twig' %}

{% block title %}Me connecter!{% endblock %}

{% block body %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="{{ asset('script/main.js') }}" defer></script>
{% endblock %}

<form method="post">

    <div class="log  ">
        <div>
            <div><img src="/image/connexion.png" alt="" class="imglog"></div>
        </div>

            <div>
                <h1 class="h3 mb-3 font-weight-normal infolog titleshadow">ME CONNECTER</h1>
            </div>
        
            <div class="inputlog">
                <div><label for="inputEmail">E-mail</label></div>
                <div><input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control inputsize" autocomplete="email" required autofocus></div>  
            </div>
        
            <div class="inputlog">
                <div><label for="inputPassword ">Mot de passe</label></div>  
                <div><input type="password" name="password" id="inputPassword" class="form-control inputsize" autocomplete="current-password" required> </div>   
            </div>

            <div >
                <div class="checkbox">
                    <div><input type="checkbox">Se souvenir de moi</div>
                </div>
                
                
            <div >
                <button class="btn btn-lg btn-primary connexion" type="submit">
            CONNEXION
            </div>
            <br>
                    <div><a href="{{path('register') }}" >S'inscrire</a><div>
        </div>
    </div>


    <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

</form>
{% endblock %}
