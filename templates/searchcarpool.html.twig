            <div class="filtered hidden" id="filters">
                    <label class="souligne"><strong>PRIX</strong></label>
                <div class="title">
                    <div>{{ form_widget(form.price) }}</div> 
                </div>

                <div class="title">
                    <label class="souligne"><strong>TEMPS</strong></label>
                    {{ form_widget(form.traveltime) }}
                </div>

                <div class="title">
