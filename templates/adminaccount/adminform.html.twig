{% extends 'base.html.twig' %}

{% block title %}Covoiturage
{% endblock %}

{% block body %}


	{% block stylesheets %}
		{{ parent() }}
		<link rel="stylesheet" href="{{ asset('css/style.css') }}">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto+Slab&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
	{% endblock %}

	{% block javascripts %}

		<script src="{{ asset('script/main.js') }}" defer></script>
	{% endblock %}

	{{ form_start(form, {'method': 'POST'}) }}


	<div class="employeform">

		<div class="col-md-4">
			<label for="validationDefault01" class="form-label">Pseudo</label>
			{{ form_widget(form.pseudo) }}
		</div>
		<div class="col-md-4">
			<label for="validationDefault01" class="form-label">Nom</label>
			{{ form_widget(form.lastname) }}
		</div>
		<div class="col-md-4">
			<label for="validationDefault02" class="form-label">Pr√©nom</label>
			{{ form_widget(form.name) }}
		</div>
		<div class="col-md-4">
			<label for="validationDefaultUsername" class="form-label">Adresse Mail</label>
			{{ form_widget(form.email) }}
		</div>
		<div class="col-md-4">
			<label for="validationDefault03" class="form-label">Mot de passe</label>
			{{ form_widget(form.password) }}
		</div>

		<div class="col-md-4">
			<br>
			<button class="btn btn-primary" type="submit">Submit form</button>
		</div>

	</div>

	{{ form_end(form) }}


{% endblock %}
